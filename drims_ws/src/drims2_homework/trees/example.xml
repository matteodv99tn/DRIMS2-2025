<root BTCPP_format="4" >
     <BehaviorTree ID="MainTree">
        <Sequence>
            <DiceIdentification service_name="/dice_identification" face_number="{face}" />
            <Sleep msec="500" />
            
            <GripperCommand action_name="/gripper_action_controller/gripper_cmd" position="0.045" max_effort="1.0"/>
            <MoveToPose action_name="/move_to_pose" cartesian_motion="false" frame_id="dice_tf" position="0.0;0.0;0.0" orientation="1.0;0.0;0.0;0.0"/>
            
            <AttachObject service_name="/attach_object" object_id="dice" target_frame_id="tip" />
            
            <MoveToPose action_name="/move_to_pose" cartesian_motion="false" frame_id="tip" position="-0.1;0.0;-0.05" orientation="0.0;0.0;0.0;1.0"/>
            <MoveToPose action_name="/move_to_pose" cartesian_motion="false" frame_id="tip" position="0.0;0.0;0.05" orientation="0.0;0.0;0.0;1.0"/>
            
            <DetachObject service_name="/detach_object" object_id="dice"/>
            
            <MoveToPose action_name="/move_to_pose" cartesian_motion="false" frame_id="tip" position="0.0;0.0;-0.1" orientation="0.0;0.0;0.0;1.0"/>
        </Sequence>
     </BehaviorTree>
 </root>